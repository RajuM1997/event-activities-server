model User {
    id                 String       @id @default(uuid())
    email              String       @unique
    password           String
    role               UserRole     @default(USER)
    needPasswordChange Boolean      @default(true)
    status             UserStatus   @default(ACTIVE)
    createdAt          DateTime     @default(now())
    updatedAt          DateTime     @updatedAt
    host               Host?
    userProfile        UserProfile?

    @@map("users")
}

model UserProfile {
    id           String    @id() @default(uuid())
    name         String?
    profilePhoto String?
    interests    Interests
    bio          String?
    location     Location?
    email        String    @unique
    user         User      @relation(fields: [email], references: [email])
    review       Review[]
    booking      Booking[]

    @@map("user_profiles")
}

model Host {
    id           String   @id @default(uuid())
    email        String   @unique
    name         String?
    profilePhoto String?
    user         User     @relation(fields: [email], references: [email])
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    review       Review[]
    event        Event[]

    @@map("hosts")
}

model Location {
    id            String      @id() @default(uuid())
    city          String
    area          String
    country       String
    userProfileId String      @unique
    user          UserProfile @relation(fields: [userProfileId], references: [id])

    @@map("locations")
}
