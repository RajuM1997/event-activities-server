model User {
    id                 String     @id @default(uuid())
    email              String     @unique
    password           String
    name               String?
    profilePhoto       String?
    contactNumber      String?
    address            String?
    role               UserRole   @default(USER)
    needPasswordChange Boolean    @default(true)
    status             UserStatus @default(ACTIVE)
    createdAt          DateTime   @default(now())
    updatedAt          DateTime   @updatedAt
    admin              Admin?
    host               Host?

    @@map("users")
}

model Admin {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    profilePhoto  String?
    address       String
    contactNumber String
    isDeleted     Boolean  @default(false)
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    user User @relation(fields: [email], references: [email])

    @@map("admins")
}

model Host {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    profilePhoto  String?
    contactNumber String
    address       String?
    user          User     @relation(fields: [email], references: [email])
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    @@map("hosts")
}
